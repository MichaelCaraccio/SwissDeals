<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="140dp"
    android:padding="10dip" >

    <!-- Lien cool pour les font-family -->
    <!-- http://stackoverflow.com/questions/12128331/how-to-change-fontfamily-of-textview-in-android -->

    <ImageView
        android:id="@+id/image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="image_offer"/>

    <TextView
        android:id="@+id/providerName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/mainColorRed"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="ProviderName"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:layout_toEndOf="@+id/image" />

    <TextView
        android:id="@+id/hoursLeft"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="xx hours left"
        android:fontFamily="sans-serif-light"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/colorBlack"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif-light"
        android:text="Title"
        android:textSize="25sp"
        android:layout_gravity="top"
        android:layout_below="@+id/providerName"
        android:layout_toEndOf="@+id/image" />

    <TextView
        android:id="@+id/shortDescription"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textColor="@color/colorBlack"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif-light"
        android:text="Description"
        android:textSize="16sp"
        android:layout_gravity="top"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/image" />

    <TextView
        android:id="@+id/currentPrice"
        android:layout_width="wrap_content"
        android:layout_height="34sp"
        android:textColor="@color/mainColorBlue"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="100.-"
        android:textSize="32sp"
        android:layout_alignBottom="@+id/image"
        android:fontFamily="sans-serif-light"
        android:layout_toEndOf="@+id/image" />

    <TextView
        android:id="@+id/oldPrice"
        android:layout_width="wrap_content"
        android:layout_height="28sp"
        android:textColor="@color/mainColorRed"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="200.-"
        android:fontFamily="sans-serif-light"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/shortDescription" />

</RelativeLayout> 